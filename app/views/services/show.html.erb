<h1 class="p-3 text-center fw-bold main-title">Book this Service</h1>

<div class="container mt-1 mb-1 p-3 mt-3 bg-light border rounded ">    
    
    <div class="flat-card-map col-10">
      <div style="width: 100%; height: 340px; margin-left: 120px;"
          data-controller="mapbox"
          data-mapbox-markers-value="<%= @markers.to_json %>"
          data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
</div>

<div class="container mt-1 mb-5 p-3 mt-3 bg-light border rounded ">
    <div class="d-flex justify-content-center row">
        <div class="col-md-10">
            <div class="row p-2 bg-white border rounded">
                <div class="col-md-3 mt-1" style="width:15%"><img class="img-fluid img-responsive rounded" style="height:100px" src="https://c0.wallpaperflare.com/preview/483/210/436/car-green-4x4-jeep.jpg"></div>
                <div class="col-md-6 mt-1">
                    <h5><%= @service.title %></h5>
                    <div class="d-flex flex-row">
                      <span class="tag tag-teal "><%= @service.category %> </span>                    
                    </div>
                    <div class="mt-3">
                      <%= @service.description %>
                    </div>
                </div>
                <div class="align-items-center align-content-center col-md-3 border-left mt-1 mx-auto" >
                    <div class="d-flex flex-row align-items-center" style="margin-left:100px">
                        <h4 class="mr-1"><i class="material-icons me-2">$NB/h</i> <%= @service.price %></span>
                    </div>

                <div class="flat-show-card" style="margin-left:70px; width:150px;">
                  <% unless @service.user == current_user %>
                  <%= link_to "Book this Service", new_service_booking_path(@service), class: 'btn btn-success text-light mt-3 form-nice-class buttonmove' %>
                  <% end %>
                </div>

                </div>
            </div>

    </div>
</div>
</div>