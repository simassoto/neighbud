
<div class="container mt-5">

<h3 class=" mb-4 text-center mt-5">
MY DASHBOARD
</h3>

  <p><%= @current_user.first_name %></p>
  <p><%= @current_user.wallet %></p>

  <div class="row">
    <% @user.services.each do |service| %>
      <div class="col-md-2">
        <div class="flat-card2">
          <div class="flat-card-image"></div>
          <div class="flat-card-content">
            <div class="flat-card-title">
              <h6><%= service.title %></h6>
              <p><%= service.description %></p>
            </div>
            <div class="flat-card-actions">
              <div class="btn-group btn-sm form-nice-class" role="group" aria-label="Button group">
                <%= link_to 'Edit', edit_service_path(service), class: "btn btn-outline-primary btn-sm" %>
              </div>
              <div class="btn-group btn-sm form-nice-class" role="group" aria-label="Button group">
                <%= link_to 'Delete', service_path(service), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-danger btn-sm" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
