<h1 class="p-3 text-center fw-bold">My Dashboard</h1>

   <!-- My bookings Container -->

<div class="container p-3 mt-3 bg-light border rounded">

  <h3 class= "fw-bold border-bottom">My Bookings</h3>



<div class="container">    
  <div class="row mt-3">

    <% @user.services.each do |service| %>
      <div class="col-xl-6 mb-4">
          <div class="card">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                  <img
                    src="https://mdbootstrap.com/img/new/avatars/8.jpg"
                    alt=""
                    style="width: 45px; height: 45px"
                    class="rounded-circle"
                  />
                  <div class="ms-3">
                    <p class="fw-bold mb-1"><%= service.title %></p>
                    <p class="text-muted mb-0"><%= service.description %></p>
                  </div>
                </div>
                <span class="badge rounded-pill badge-success">Active</span>
              </div>
            </div>
            <div
              class="card-footer border-0 bg-light p-2 d-flex justify-content-around"
            >
              <a
                class="btn btn-link m-0 text-reset"
                href="#"
                role="button"
                data-ripple-color="primary"
                >Edit<i class="fas fa-edit ms-2 text-decoration-none"></i
              ></a>
              <a
                class="btn btn-link m-0 text-reset"
                href="#"
                role="button"
                data-ripple-color="primary"
                >Delete<i class="fas fa-trash ms-2"></i
              ></a>
            </div>
          </div>
        </div>
      <% end %>

  </div>
</div>
</div>





 <!-- My Services was booked Container -->

