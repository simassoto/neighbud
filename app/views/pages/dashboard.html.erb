
<h1 class="p-3 text-center fw-bold main-title">My Dashboard</h1>

   <!-- My bookings Container -->
<div class="row">
  <div class="container p-3 mt-3 bg-light border rounded " style="width: 90rem;">


<!-- Board Lateral direito WALLET-->

        <div class="container p-3 bg-light border rounded " style="width: 27rem; float:right;">
              <div class="col-md-12 text-center">
                  <h3 class= "fw-bold border-bottom main-title">Dashboard</h3>

                    <table class="table align-middle mt-3 bg-white main-title border-top: 2px solid currentColor;">
                      <thead class="table-header text-light">
                      <tr>
                        <th class="main-title">My Wallet</th>
                      </tr>
                      </thead>
                    </table>

                      <div class="mt-3">
                        <div class="card voutchers">
                          <div class="voutcher-divider">
                            <div class="voutcher-left text-center">
                              <span class="voutcher-name"><%= @user.email %></span>
                              <h5 class="voutcher-code"><%= @user.first_name %></h5>
                            </div>
                            <div class="voutcher-right text-center border-left">
                              <h5 class="discount-percent">$NB <%= @user.wallet %></h5>
                            </div>
                          </div>
                        </div>
                      </div>

<!-- Board Lateral direito WALLET-->
<!-- Board Lateral direito list services-->
              <div class="col-md-12 text-center">

                    <table class="table align-middle mt-3 bg-white main-title border-top: 2px solid currentColor;">
                      <thead class="table-header text-light">
                      <tr>
                        <th>My Services</th>
                      </tr>
                      </thead>
                    </table>

                      <%= link_to 'New service', new_service_path, class: "btn btn-primary rounded-pill text-light" %>

                  <div class="container d-flex justify-content-center" style="margin-left:-17px;">
                  </div>
                </div>

                  <div class="container d-flex justify-content-center" style="margin-left:-17px;">
                      <ul class="listservice-group text-white col-md-12 main-title">
                        <% @user.services.each do |service| %>
                          <%= link_to edit_service_path(service) do %>
                          <li class="listservice-group-item d-flex justify-content-between align-content-center">
                            <div class="d-flex flex-row">
                              <img src="https://img.icons8.com/color/100/000000/folder-invoices.png" width="40" style="margin-right:5px;"/>
                              <div class="ml-2">
                                <h6 class="mb-0"><%= service.title %></h6>
                                <div class="about">
                                  <span><%= service.category %></span>
                                  <span style="float:right;"> $NB <%= service.price %></span>
                                </div>
                              </div>
                            </div>
                          </li>
                          <% end %>
                        <% end %>
                      </ul>
                  </div>

 <!-- final Board Lateral direito list services-->

                <div class="row mt-3">
                </div>
              </div>
        </div>

    <!-- Final Board Lateral direito-->

    <!-- Board Lateral esquerdo -->

    <div class="container p-3 bg-light border rounded " style="width: 60rem; float:left;">
      <div class="col-md-12">
          <h3 class= "fw-bold border-bottom main-title">My Bookings</h3>

            <table class="table align-middle mt-3 bg-white main-title border-top: 2px solid currentColor;">
              <thead class="table-header text-light">
              <tr>
                <th>Bookings Cards</th>
              </tr>
              </thead>
            </table>

                    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

        <div class="row mt-3">
          <% @user.bookings.each do |booking| %>
            <div class="col-xl-3 mb-4 main-title">
                <div class="card border shadow-0 mb-3 cardmove" style="width: 14rem; margin-left: -5px;">
                  <div class="p-3">
                    <img
                      src="https://mdbootstrap.com/img/new/avatars/8.jpg"
                      alt=""
                      style="width: 45px; height: 45px, position: absolute;"
                      class="rounded-circle align-items-center"
                    />

                    <i class="fas fa-clock"></i><i class="ms-2"><%= booking.duration %> hours</i>

                  </div>
                  <div class="card-body text-dark">

                    <div class="ms-1 w-75 p-1">
                      <h6 class="fw-bold mb-0">Service</h6><p class="ms-2"><%= booking.service.title %></p>
                      <h6 class="fw-bold mb-0">Date</h6><p class="ms-2"><%= booking.date %></p>
                      <!-- CHAMAR A FUNÇÃO TOTAL PRICE -->
                      <h6 class="fw-bold mb-0">Total Price</h6><p class="ms-2"> $NB <%= booking.service.price * booking.duration %></p>
                    </div>

                  </div>
                  <div class="card-footer bg-transparent border">

                  <%= link_to 'Delete', booking_path(booking), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger btn-sm rounded-pill text-light" %>

                  </div>
                </div>
            </div>
          <% end %>
        </div>
      </div>

    <!-- Final Board Lateral esquerdo -->

    </div>
  </div>
</div>






  <!-- My Services were booked Container -->


<div class="container p-3 mt-5 bg-light border rounded">

  <h3 class= "fw-bold border-bottom main-title">My Schedule</h3>

  <table class="table align-middle mt-3 bg-white main-title">
    <thead class="table-header text-light">
      <tr>
        <th>Name Client</th>
        <th>Title Service</th>
        <th>Category</th>
        <th>My Price</th>
        <th>Request</th>
    </thead>

    <tbody>
      <% @booked.each do |booking| %>
        <tr>
          <td>
            <div class="d-flex align-items-center">
              <img
                  src="https://mdbootstrap.com/img/new/avatars/8.jpg"
                  alt=""
                  style="width: 45px; height: 45px"
                  class="rounded-circle"
                  />
              <div class="ms-3">
                <p class="fw-bold mb-1"><%= booking.user.first_name %></p>
                <p class="text-muted mb-0"><%= booking.user.last_name %></p>
              </div>
            </div>
          </td>
          <td>
            <p class="fw-normal mb-1"><%= booking.service.title %></p>
          </td>
          <td>
            <p class="text-muted mb-0"><%= booking.service.category %></p>
          </td>
          <td>
            <p class="text-muted mb-0 ps-3">$NB <%= booking.service.price %></p>
          </td>
          <td>
            <%= link_to 'Confirm', dashboard_path, data: {confirm: "Are you sure?"}, class: "btn btn-success btn-sm rounded-pill text-light" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
